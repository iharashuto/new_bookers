<div class="row">
	<div class="col-xs-3">
		<h2>User info</h2>
		<%= form_for(@user) do |f| %>

			<%= f.label :name %>
			<%= f.text_field :name %>

			<%= f.label :image %>
			<%= f.attachment_field :profile_image %>

			<%= f.label :introduction %>
			<%= f.text_area :introduction %>

			<%= f.submit "Update User" %>
		<% end %>
	</div>
</div>